{
  "name": "smd-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && npx pagefind --site dist",
    "preview": "astro preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "astro check",
    "verify": "npm run typecheck && npm run format:check && npm run lint && npm run build",
    "prepare": "node -e \"if(process.env.CI)process.exit(0)\" && husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.0",
    "@astrojs/sitemap": "^3.3.0",
    "astro": "^5.17.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260214.0",
    "@eslint/js": "^9.18.0",
    "@tailwindcss/vite": "^4.0.0",
    "@vite-pwa/astro": "^1.2.0",
    "eslint": "^9.18.0",
    "eslint-plugin-astro": "^1.3.0",
    "globals": "^15.0.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.4.0",
    "pagefind": "^1.4.0",
    "prettier": "^3.4.0",
    "prettier-plugin-astro": "^0.14.0",
    "tailwindcss": "^4.0.0",
    "typescript-eslint": "^8.55.0"
  }
}
