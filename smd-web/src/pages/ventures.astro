---
import BaseLayout from '../layouts/BaseLayout.astro'
import { ventures } from '../data/ventures'
---

<BaseLayout
  title="Ventures"
  description="Current venture portfolio under SMDurgan, LLC."
>
  <h1 class="page-title">Ventures</h1>
  <p>
    Each venture has explicit stage gates and kill criteria. We optimize for
    disciplined execution.
  </p>
  <div class="card-grid section">
    {
      ventures.map((venture) => (
        <article class="card">
          <h2>{venture.name}</h2>
          <p class="badge">{venture.stage}</p>
          <p>{venture.summary}</p>
          <p>
            <a href={venture.url} target="_blank" rel="noopener noreferrer">
              {venture.url}
            </a>
          </p>
        </article>
      ))
    }
  </div>
</BaseLayout>
