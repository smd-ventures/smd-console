---
import BaseLayout from '../layouts/BaseLayout.astro'
import { ventures } from '../data/ventures'
---

<BaseLayout
  title="Portfolio Legal Entity"
  description="SMDurgan, LLC is the legal entity behind the venture portfolio."
>
  <h1 class="page-title">SMDurgan, LLC</h1>
  <p>
    SMDurgan, LLC is the legal entity for a focused software venture portfolio.
    Venture Crane operates as the product factory inside this structure.
  </p>

  <section class="section">
    <h2>Portfolio Snapshot</h2>
    <div class="card-grid">
      {
        ventures.map((venture) => (
          <article class="card">
            <p class="badge">{venture.stage}</p>
            <h3>{venture.name}</h3>
            <p>{venture.summary}</p>
            <a href={venture.url} target="_blank" rel="noopener noreferrer">
              Visit venture
            </a>
          </article>
        ))
      }
    </div>
  </section>
</BaseLayout>
